
@{
    ViewBag.Title = "説明登録 (Explanation Registration)";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="/Content/common.css" />
    <link rel="stylesheet" type="text/css" href="/Content/explanations_ver02.css" />
}
    <div class="content container-fluid">
        <!-----------------Explanation Master: Explanation Registration Form----------------->
        @if (Convert.ToBoolean(ViewBag.linkFlag))
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-5">
                            <label id="input_master">
                                新規登録する場合は、「新規説明をここに入力」テキストボックスに説明名を記載し、保存ボタンをクリックしてください。 
                            </label>
                            <table id="exp_reg_tbl">
                                <thead style="border:none;">
                                    <tr></tr>
                                    <tr>
                                        <th class="explanation_th">説明 (Explanation Name)</th>
                                        <th class="explanation_th">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td id="exp_reg_frm_td">
                                            <input type="text" value="" placeholder="新規説明をここに入力" id="explanation_name">                                           
                                        </td>
                                        <td id="exp_reg_frm_td">
                                            <a href="javascript:void(0);" class="" id="exp_reg_cancel_btn" data-dismiss="modal">取消(undo)</a>
                                            <a href="javascript:void(0);" class="" id="exp_reg_save_btn" onclick="InsertExplanations();">保存（save）</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br /><br />
        }


        <!-----------------Explanation Master: Explanation list are showing on this part----------------->
        <div id="exp_list" style="display: block;">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <label id="list_master">
                            登録した説明を消去するには、チェックボックスにチェックを入れ、
                        <br>
                            削除ボタンをクリックしてください。 
                        </label>
                        <table class="" id="exp_list_tbl">
                            <thead>
                                <tr>
                                    <th colspan="6" class="explanation_th">説明 リスト(Explanation List)</th>
                                </tr>
                                <tr>
                                    <th class="exp_list_theader explanation_th" >複数選択</th>
                                    <th class="exp_list_theader explanation_th">説明 (Explanation Name)</th>
                                </tr>
                            </thead>
                            <tbody id="explanations_list_tbody"></tbody>
                        </table>
                        @if (Convert.ToBoolean(ViewBag.linkFlag))
                        {
                            <label id="explanation_delete_btn">
                                <a id="explanations_inactive_btn" href="javascript:void();" data-toggle="modal" data-target="#inactive_explanation_modal" onClick="onExplanationInactiveClick()">削除 (delete)</a>
                            </label>
                        }

                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
<br><br>

<input type="hidden" id="explanation_warning_text" />

<!-----------------Modal: Delete Roles----------------->
<div class="modal custom-modal fade" id="inactive_explanation_modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <h3>説明削除 (Delete Explanations)</h3>
                    <ol class="explanation_count" style="text-align:left;"></ol>
                    <p>本当に削除しますか？</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">キャンセル</a>
                        </div>
                        <div class="col-6">
                            <a href="javascript:void(0);" class="btn btn-primary continue-btn" id="explanations_inactive_confirm_btn">削除</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/Scripts/common.js"></script>
    <script src="/Scripts/explanations_ver02.js"></script>
    <script src="~/signalr/hubs"></script>

    <script type="text/javascript">

        $.connection.hub.disconnected(function () {
            setTimeout(function () {
                $.connection.hub.start();
            }, 5000); // Restart connection after 5 seconds.
        });

        $.connection.hub.start();


        $(function () {

            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message) {
                if (message != $('#user_name').text()) {
                    alert(name + message);
                }
                $.ajax({
                    url: `/api/utilities/GetUserLogs/`,
                    contentType: 'application/json',
                    type: 'GET',
                    async: false,
                    dataType: 'json',
                    success: function (data) {
                        var userName = $('#user_name').text();
                        $('#user_log').empty();
                        $.each(data, (index, value) => {
                            if (userName !== value.UserName) {
                                $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                            }
                        });

                    }
                });
            };
        });

        $(document).ready(function () {


            setInterval(() => {
                $.ajax({
                    url: `/api/utilities/GetUserLogs/`,
                    contentType: 'application/json',
                    type: 'GET',
                    async: false,
                    dataType: 'json',
                    success: function (data) {
                        var userName = $('#user_name').text();
                        $('#user_log').empty();
                        $.each(data, (index, value) => {
                            if (userName !== value.UserName) {
                                $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                            }
                        });

                    }
                });
            }, 5000);

            $.ajax({
                url: `/api/utilities/GetUserLogs/`,
                contentType: 'application/json',
                type: 'GET',
                async: false,
                dataType: 'json',
                success: function (data) {
                    var userName = $('#user_name').text();
                    $('#user_log').empty();
                    $.each(data, (index, value) => {
                        if (userName !== value.UserName) {
                            $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                        }
                    });

                }
            });

        });
    </script>   
}