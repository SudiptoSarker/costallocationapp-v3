}
    <div class="content container-fluid" style="position:relative;margin-top: -38px;">
        <!-- Page Header -->
        @if (Convert.ToBoolean(ViewBag.linkFlag))
        {
            <!-- Show Loader -->
            <div class="row">
                <div class="col-md-12">
                    <div class="forecast">
                        <div id="loading" style="display:none;position:absolute;left:0;top:-147px;  width:100%;height:100%;">
                            <center>
                                <img src="~/img/forecast_loader.gif" height="250" width="250" style="margin-top:265px;">
                                <br>
                                <strong>しばらくお待ちください...</strong>
                                <br>
                                <br>
                            </center>
                        </div>
                    </div>
                </div>
            </div>

            <br/>
            <div id="approve_history_navigation"><span id="nav1">年度データ (Yearly Data) </span>><span id="nav2"> 承認履歴 (Approval History)</span></div>  

            <div class="row" id="filter_history_data" >
                <div class="col-3">
                    <select id="history_year" class="" ></select>
                </div>
                <div class="col-2" id="btn_submit">
                    <button type="submit" class="btn btn-light mb-2" id="history_data_btn" >表示</button>
                </div>
            </div>            

            <br>
            <div class="row" id="approve_history_tbl" style="display: none;">
                <div class="col-7">
                    <table class="table" id="timestamp_list">
                        <thead>
                            <tr>
                                <th>更新者</th>
                                <th style="padding-left: 43px;">ファイル名</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        }

    </div>

