
@{
    ViewBag.Title = "Get Histories";
}

@section Styles {
    <link href="/Content/common.css" rel="stylesheet" type="text/css" />
    <link href="/Content/histories.css" rel="stylesheet" type="text/css" />
}
<div class="container">
    <!-- Page Header -->
    <div class="page-header" id="data_import">
        <div class="row align-items-center">
            <div class="col">
                <h5>履歴年度データー</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <select id="history_year" class="form-control" >
                        <option value="">Select Year</option>
                        <option value="2023">2023</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-light mb-2" id="history_data_btn">Search</button>

            </div>
            <div class="col-4">
                <table class="table" id="timestamp_list">
                    <thead>
                        <tr>
                            <th>Created By</th>
                            <th>File Name</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div id="forecast_histories">
                <table class="table table-bordered" style="width:100%;font-size:12px;text-align:center; display:none;">
                    <thead>
                        <tr>
                            <th>Employee Name</th>
                            <th>10月</th>
                            <th>11月</th>
                            <th>12月</th>
                            <th>1月</th>
                            <th>2月</th>
                            <th>3月</th>
                            <th>4月</th>
                            <th>5月</th>
                            <th>6月</th>
                            <th>7月</th>
                            <th>8月</th>
                            <th>9月</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/Scripts/common.js"></script>
    <script src="/Scripts/histories.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: `/api/utilities/GetUserLogs/`,
                contentType: 'application/json',
                type: 'GET',
                async: false,
                dataType: 'json',
                success: function (data) {
                    var userName = $('#user_name').text();
                    $('#user_log').empty();
                    $.each(data,(index, value) => {
                        if (userName !== value.UserName) {
                            $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                        }
                    });

                }
            });                    
        });

        $.connection.hub.disconnected(function () {
                setTimeout(function () {
                    $.connection.hub.start();
                }, 5000); // Restart connection after 5 seconds.
            });

            $(function () {
                var chat = $.connection.chatHub;
                //$.connection.hub.start();
                //debugger;
                //console.log(chat);
                chat.client.addNewMessageToPage = function (name, message) {
                    alert(name + ' logged in');
                    $.ajax({
                        url: `/api/utilities/GetUserLogs/`,
                        contentType: 'application/json',
                        type: 'GET',
                        async: false,
                        dataType: 'json',
                        success: function (data) {
                            var userName = $('#user_name').text();

                            $('#user_log').empty();
                            $.each(data, (index, value) => {
                                if (userName != value.UserName) {
                                    $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                                }
                                
                            });

                        }
                    });
                };
            });
    </script>
}


