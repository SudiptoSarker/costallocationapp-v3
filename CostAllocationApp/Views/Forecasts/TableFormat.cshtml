
@{
    ViewBag.Title = "Table Format";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <link rel="stylesheet" type="text/css" href="/Content/table_format.css" />
}
<div class="content container-fluid">
        <!--create table form-->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <table id="dynamic_table_create">
                            <thead style="border: none;">
                                <tr></tr>
                                <tr>
                                    <th>テーブル名(Table)</th>
                                    <th>表のタイトル(Title)</th>
                                    <th>テーブルの位置(Position)</th>
                                    <th>操作</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>                                     
                                    <td id="dynamic_table_create_td">
                                        <input type="text" value="" placeholder="テーブル名 (table name)" id="table_name">                                        
                                    </td>
                                    <td id="dynamic_table_create_td">
                                        <input type="text" value="" placeholder="表のタイトル (table title)" id="table_title">                                        
                                    </td>  
                                    <td id="dynamic_table_create_td">
                                        <input type="text" value="" placeholder="テーブルの位置 (table position)" id="table_position">                                        
                                    </td>  

                                    <td id="dynamic_table_create_td">
                                        <a href="javascript:void(0);" class="" id="dynamic_table_create_cancel_btn" data-dismiss="modal">Cancel</a>
                                        <a href="javascript:void(0);" class="" id="dynamic_table_create_save_btn" onclick="InsertDynamicTables()">Save</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <br /><br />

    <!-----------------Section Master: Section list are showing on this part----------------->    
    <div id="dynamic_table_list" style="display: block;">
        <div class="row">
            <div class="col-md-6">
                <div class="table-responsive">
                    <table class="" id="dynamic_list_tbl">
                        <thead>
                            <tr>
                                <th colspan="6">Dynamic Table List</th>
                            </tr>
                            <tr>
                                <th class="section_list_theader">Table Name</th>
                                <th class="section_list_theader">Table Title</th>
                                <th class="section_list_theader">Table Position</th>
                                <th class="section_list_theader">Action</th>
                            </tr>
                        </thead>
                        <tbody id="dynamic_list_tbody"></tbody>
                    </table>
                    @if (Convert.ToBoolean(ViewBag.linkFlag))
                    {
                        <label id="section_delete_btn">
                            <a id="section_inactive_btn" href="javascript:void();" data-toggle="modal" data-target="#delete_section" onClick="onSectionInactiveClick()">削除</a>
                        </label>
                    }

                </div>
            </div>
        </div>
    </div>
    <br />


