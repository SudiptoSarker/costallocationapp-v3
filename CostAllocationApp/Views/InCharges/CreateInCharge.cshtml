
@{
    ViewBag.Title = "新規担当の登録 (In-Charge Registration)";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="/Content/common.css" />
    <link rel="stylesheet" type="text/css" href="/Content/incharge_ver02.css" />    
}

    <div class="content container-fluid">        
        <!-----------------In-Charge Master: In-Charge list are showing on this part----------------->
        <div id="incharge_list" style="display: block;">
            <div class="row">
                <div class="col-md-10">
                    <div class="table-responsive">
                        <label id="list_master">
                            登録した担当を消去するには、チェックボックスにチェックを入れ、 削除ボタンをクリックしてください。                        
                        </label>
                        <table class="" id="incharge_list_tbl">
                            <thead>
                                <tr>
                                    <th colspan="6" class="incharge_th">担当 氏名(In-Charge List)</th>
                                </tr>
                                <tr>
                                    <th class="incharge_list_theader incharge_th">複数選択</th>
                                    <th class="incharge_list_theader incharge_th">担当 (In-Charge Name)</th>
                                </tr>
                            </thead>
                            <tbody id="incharge_list_tbody"></tbody>
                        </table>                        
                    </div>
                </div>
            </div>

            @if (Convert.ToBoolean(ViewBag.linkFlag))
            {
                
                <div class="add_edit_delete_btn_section" style="display: block;">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-3">
                                    <button class="btn delete_inchar_btn" type="button">削除 (delete)​</button>
                                </div>                                
                                <div class="col-md-3">
                                    <button class="btn edit_inchar_btn" type="button">編集​ (edit)​</button>
                                </div>
                                <div class="col-md-3" >
                                    <button class="btn add_inchar_btn" type="button">追加 (add)</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <br />
    </div>
<br><br>

<input type="hidden" id="incharge_warning_text" />
<input type="hidden" id="edit_incharge_id" />

<!-----------------Modal: Add Section----------------->
<div class="modal custom-modal fade" id="add_incharge_modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                
                <div class="form-header">
                    <h3 id='add_modal_header'>追加 担当 (add Incharge)</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <label id='add_modal_body_title'>新規登録する場合は、「新規担当をここに入力」テキストボックスに担当名を記載し、保存ボタンをクリックしてください。 </label>
                    <table id="incharge_reg_tbl">
                        <thead style="border:none;">
                            <tr></tr>
                            <tr>
                                <th class="incharge_th">担当 (In-Charge Name)</th>
                                <th class="incharge_th">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td id="incharge_reg_frm_td">
                                    <input type="text" value="" placeholder="新規担当をここに入力" id="in_charge_name">                                            
                                </td>
                                <td id="incharge_reg_frm_td">
                                    <a href="javascript:void(0);" class="" id="undo_incharge_btn_add">取消(undo)</a>
                                    <a href="javascript:void(0);" class="" id="incharge_reg_save_btn">保存（save）</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>                     
                </div>

                <div class="modal-footer">                        
                    <button type="button" class="btn btn-secondary modal_return_btn" data-dismiss="modal" >戻る</button>                        
                </div>
            </div>
        </div>
    </div>
</div>

<!-----------------Modal: Edit Section----------------->
<div class="modal custom-modal fade" id="edit_incharge_modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                
                <div class="form-header">
                    <h3 id='add_modal_header'>編集​ 担当 (edit Incharge)</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <label id='add_modal_body_title'>新規登録する場合は、「新規担当をここに入力」テキストボックスに担当名を記載し、保存ボタンをクリックしてください。 </label>
                    <table id="incharge_reg_tbl">
                        <thead style="border:none;">
                            <tr></tr>
                            <tr>
                                <th class="incharge_th">担当 (In-Charge Name)</th>
                                <th class="incharge_th">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td id="incharge_reg_frm_td">
                                    <input type="text" value="" placeholder="新規担当をここに入力" id="in_charge_name_edit">                                            
                                </td>
                                <td id="incharge_reg_frm_td">
                                    <a href="javascript:void(0);" class="" id="undo_incharge_btn_edit">取消(undo)</a>
                                    <a href="javascript:void(0);" class="" id="incharge_reg_save_btn_edit">更新​ (Update)</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>                     
                </div>
                
                <div class="modal-footer">                        
                    <button type="button" class="btn btn-secondary modal_return_btn" data-dismiss="modal" >戻る</button>                        
                </div>
            </div>
        </div>
    </div>
</div>

<!-----------------Modal: Delete In-Charge----------------->
<div class="modal custom-modal fade" id="del_incharge_modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <h3>登録した担当の削除 (Delete In-Charge)</h3>
                    <ol class="incharge_count" style="text-align:left;"></ol>
                    <p>本当に削除しますか？</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">キャンセル</a>
                        </div>
                        <div class="col-6">
                            <a href="javascript:void(0);" class="btn btn-primary continue-btn" id="incharge_inactive_confirm_btn">削除</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/Scripts/common.js"></script>    
    <script src="/Scripts/incharge_ver02.js"></script>     
    <script src="~/signalr/hubs"></script>

    <script type="text/javascript">
        $.connection.hub.disconnected(function () {
            setTimeout(function () {
                $.connection.hub.start();
            }, 5000); // Restart connection after 5 seconds.
        });

        $.connection.hub.start();

        $(function () {

            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message) {
                if (message != $('#user_name').text()) {
                    alert(name + message);
                }
                $.ajax({
                    url: `/api/utilities/GetUserLogs/`,
                    contentType: 'application/json',
                    type: 'GET',
                    async: false,
                    dataType: 'json',
                    success: function (data) {
                        var userName = $('#user_name').text();
                        $('#user_log').empty();
                        $.each(data, (index, value) => {
                            if (userName !== value.UserName) {
                                $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                            }
                        });

                    }
                });
            };
        });


        $(document).ready(function () {

            setInterval(() => {
                $.ajax({
                    url: `/api/utilities/GetUserLogs/`,
                    contentType: 'application/json',
                    type: 'GET',
                    async: false,
                    dataType: 'json',
                    success: function (data) {
                        var userName = $('#user_name').text();
                        $('#user_log').empty();
                        $.each(data, (index, value) => {
                            if (userName !== value.UserName) {
                                $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                            }
                        });

                    }
                });
            }, 5000);

            $.ajax({
                url: `/api/utilities/GetUserLogs/`,
                contentType: 'application/json',
                type: 'GET',
                async: false,
                dataType: 'json',
                success: function (data) {
                    var userName = $('#user_name').text();
                    $('#user_log').empty();
                    $.each(data,(index, value) => {
                        if (userName !== value.UserName) {
                            $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                        }
                    });

                }
            });
                    
        });
     
    </script>         
}

