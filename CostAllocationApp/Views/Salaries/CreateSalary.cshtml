
@{
    ViewBag.Title = "給与登録 (Salary Unit Price Registration)";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="/Content/common.css" />
    <link rel="stylesheet" type="text/css" href="/Content/salaries.css" />
    <link rel="stylesheet" type="text/css" href="/Content/create_dynamic_table.css" />  
    <link rel="stylesheet" type="text/css" href="/Content/explanations_ver02.css" />
}
<div class="content container-fluid">
    <!--Salaries List-->
    <div id="salary_list" style="display: block;">
        <div class="row">
            <div class="col-md-10">
                <div class="table-responsive">
                    <label id="list_master">
                        登録したグレードを消去するには、チェックボックスにチェックを入れ、削除ボタンをクリックしてください。 
                    </label>
                    <table class="" id="salary_table">
                        <thead>
                            <tr>
                                <th class="salary_th">複数選択</th>
                                <th class="salary_th">給与登録</th>
                                <th class="salary_th">グレード (Grade)</th>
                            </tr>
                        </thead>
                        <tbody id="salary_list_tbody"></tbody>
                    </table>
                </div>
            </div>
        </div>    
        @if (Convert.ToBoolean(ViewBag.linkFlag))
        {            
            <div class="add_edit_delete_btn_section" style="display: block;">
                <div class="row">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-3" >
                                <button class="btn add_salary_btn" type="button">追加 (add)</button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn edit_explanation_btn" type="button">編集​ (edit)​</button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn delete_role_btn" type="button">削除 (delete)​</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        } 
    </div> 
</div>

<input type="hidden" id="salary_warning_text" />
<input type="hidden" id="onchange_gradeId" />


<!-----------------Modal: Add salary----------------->
<div class="modal custom-modal fade" id="add_salary_modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                
                <div class="form-header">
                    <h3 id='add_modal_header'>追加 説明 (add salary)</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <label id='add_modal_body_title'>新規登録する場合は、「新規説明をここに入力」テキストボックスに説明名を記載し、保存ボタンをクリックしてください。 </label>
                    <table id="exp_reg_tbl">
                        <thead style="border:none;">
                            <tr></tr>
                            <tr>
                                <th class="explanation_th">From</th>
                                <th class="explanation_th">To</th>
                                <th class="explanation_th">Grade</th>
                                <th class="explanation_th">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td id="salary_from_td">
                                    <input type="text" value="" placeholder="新規説明をここに入力" id="unit_price_from">                                           
                                </td>
                                <td id="salary_to_td">
                                    <input type="text" value="" placeholder="新規説明をここに入力" id="unit_price_to">                                           
                                </td>
                                <td id="salary_grade_point_td">
                                    <input type="text" value="" placeholder="新規説明をここに入力" id="grae_point">                                           
                                </td>
                                <td id="salary_action_td">
                                    <a href="javascript:void(0);" class="" id="exp_reg_cancel_btn" data-dismiss="modal">取消(undo)</a>
                                    <a href="javascript:void(0);" class="" id="exp_reg_save_btn">保存（save）</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>          
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Inactive Salary Modal -->
<div class="modal custom-modal fade" id="inactive_salary_modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <h3>選択したグレードを削除 (Delete Salary)</h3>
                    <ol class="salary_count" style="text-align:left;"></ol>
                    <p>本当に削除しますか？</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">キャンセル</a>
                        </div>
                        <div class="col-6">
                            <a href="javascript:void(0);" class="btn btn-primary continue-btn" id="salary_inactive_confirm_btn">削除</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/Scripts/common.js"></script> 
    <script src="/Scripts/salaries.js"></script>     
    <script src="~/signalr/hubs"></script>

    <script type="text/javascript">
        $.connection.hub.disconnected(function () {
            setTimeout(function () {
                $.connection.hub.start();
            }, 5000); // Restart connection after 5 seconds.
        });
        $.connection.hub.start();

        $(function () {

            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message) {
                if (message != $('#user_name').text()) {
                    alert(name + message);
                }
                $.ajax({
                    url: `/api/utilities/GetUserLogs/`,
                    contentType: 'application/json',
                    type: 'GET',
                    async: false,
                    dataType: 'json',
                    success: function (data) {
                        var userName = $('#user_name').text();
                        $('#user_log').empty();
                        $.each(data, (index, value) => {
                            if (userName !== value.UserName) {
                                $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                            }
                        });

                    }
                });
            };
        });

        $(document).ready(function () {

            setInterval(() => {
                $.ajax({
                    url: `/api/utilities/GetUserLogs/`,
                    contentType: 'application/json',
                    type: 'GET',
                    async: false,
                    dataType: 'json',
                    success: function (data) {
                        var userName = $('#user_name').text();
                        $('#user_log').empty();
                        $.each(data, (index, value) => {
                            if (userName !== value.UserName) {
                                $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                            }
                        });

                    }
                });
            }, 5000);

            $.ajax({
                url: `/api/utilities/GetUserLogs/`,
                contentType: 'application/json',
                type: 'GET',
                async: false,
                dataType: 'json',
                success: function (data) {
                    var userName = $('#user_name').text();
                    $('#user_log').empty();
                    $.each(data,(index, value) => {
                        if (userName !== value.UserName) {
                            $('#user_log').append(`<li style="float:left;background-color:lightgrey; border-radius:50px; overflow:hidden;margin-right:5px;">${value.UserName}</li>`);
                        }
                    });

                }
            });
                    
        });
    </script>   
}